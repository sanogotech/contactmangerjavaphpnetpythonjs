<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#fff">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#fff" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:fontFamily="serif"
            android:textColor="@color/colorPrimary"
            android:text="@string/title_activity_new_contact"
            android:textSize="18dp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textStyle="normal"
                android:typeface="serif"
                android:fontFamily="serif"
                android:textSize="14dp"
                android:text="Nom"
                android:textColor="#444" />

            <EditText
                android:id="@+id/nom"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:textColor="#444"
                android:inputType="text"
                android:typeface="serif"
                android:fontFamily="serif"
                android:textSize="14dp"
                android:background="@drawable/selector_edittext"
                android:hint="Nom du contact"
                android:paddingLeft="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left">

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textStyle="normal"
                android:typeface="serif"
                android:fontFamily="serif"
                android:textSize="14dp"
                android:text="Prénom(s)"
                android:textColor="#444" />

            <EditText
                android:id="@+id/prenom"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:typeface="serif"
                android:fontFamily="serif"
                android:background="@drawable/selector_edittext"
                android:hint="Prénom du contact"
                android:ems="10"
                android:textColor="#444"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textSize="14dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textStyle="normal"
                android:typeface="serif"
                android:fontFamily="serif"
                android:text="Téléphone"
                android:textSize="14dp"
                android:textColor="#444" />

            <EditText
                android:id="@+id/telephone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="14dp"
                android:textStyle="normal"
                android:inputType="phone"
                android:ems="10"
                android:typeface="serif"
                android:fontFamily="serif"
                android:background="@drawable/selector_edittext"
                android:hint="Téléphone du contact"
                android:textColor="#444"
                android:paddingLeft="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textStyle="normal"
                android:typeface="serif"
                android:fontFamily="serif"
                android:text="Email"
                android:textSize="14dp"
                android:textColor="#444" />

            <EditText
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="14dp"
                android:textStyle="normal"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:typeface="serif"
                android:fontFamily="serif"
                android:background="@drawable/selector_edittext"
                android:hint="Adresse email du contact"
                android:textColor="#444"
                android:paddingLeft="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textStyle="normal"
                android:typeface="serif"
                android:fontFamily="serif"
                android:text="Adresse"
                android:textSize="14dp"
                android:textColor="#444" />

            <EditText
                android:id="@+id/adresse"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textStyle="normal"
                android:inputType="text"
                android:textSize="14dp"
                android:ems="10"
                android:typeface="serif"
                android:fontFamily="serif"
                android:background="@drawable/selector_edittext"
                android:hint="Adresse du contact (pays, ville, quartier, etc.)"
                android:textColor="#444"
                android:paddingLeft="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left" />

        </LinearLayout>

    </ScrollView>



            <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal|center_vertical"
        android:background="@android:color/transparent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/add"
            android:layout_width="218dp"
            android:layout_height="40dp"
            android:text="AJOUTER"
            android:textSize="14dp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />
    </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/titre"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/app_copy"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="sans-serif"
                    android:typeface="serif"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>




